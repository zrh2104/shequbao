<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hui_line_color"
    android:orientation="vertical" >

    <!-- 这个页面是首页头部图片和导航 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_homepage_content2_box"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/layout_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/layout_home_bg_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="23.0dip" >

            <TextView
                android:id="@+id/home_guleishishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="古雷时事"
                             android:textColor="#ff37c49a"
                android:textSize="@dimen/home_frame_text_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_guleibianming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1"
                android:background="@drawable/layout_home_bg_selector"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="23.0dip" >

                <TextView
                    android:id="@+id/home_guleibianming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="古雷便民"
                    android:textColor="#ff37c49a"
                    android:textSize="@dimen/home_frame_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_guleiwuye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_guleibianming"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="2dip"
                android:layout_weight="1"
                android:background="@drawable/layout_home_bg_selector"
                android:clickable="true"
                android:paddingTop="23.0dip" >

                <TextView
                    android:id="@+id/home_guleiwuye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="物业报修"
                    android:textColor="#ff37c49a"
                    android:textSize="@dimen/home_frame_text_size" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/middle_dividing_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_homepage_content2_box"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/layout_shenghuoguangjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="2.0dip"
            android:layout_weight="1"
            android:background="@drawable/layout_home_bg_selector"
            android:clickable="true"
            android:paddingTop="23.0dip" >

            <TextView
                android:id="@+id/home_shenghuoguangjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="生活管家"
                android:textColor="#ff37c49a"
                android:textSize="@dimen/home_frame_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_sqiandao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_weight="1"
            android:background="@drawable/layout_home_bg_selector"
            android:clickable="true"
            android:paddingTop="23.0dip" >

            <TextView
                android:id="@+id/home_qiandao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="签到"
                android:textColor="#ff37c49a"
                android:textSize="@dimen/home_frame_text_size" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/middle_dividing_line"
         />

</LinearLayout>